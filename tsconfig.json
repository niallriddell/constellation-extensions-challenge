{
  "extends": "@pega/tsconfig/index.json",
  "include": [
    "./**/*",
    ".storybook/**/*"
  ],
  "exclude": [
    "node_modules",
    "node_modules/@pega/pcore-pconnect-typedefs/*"
  ],
  "compilerOptions": {
    "noEmit": true,
    "allowJs": true,
    "importsNotUsedAsValues": "remove",
    "baseUrl": "./",
    "paths": {  
      "@pega/pcore-pconnect-typedefs/*": ["node_modules/@pega/pcore-pconnect-typedefs/*"]  
    },
    "skipLibCheck": true
  }
}
