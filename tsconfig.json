{
  "extends": "@pega/tsconfig/index.json",
  "include": [
    "src/**/*",
    ".storybook/**/*",
    "types/global.d.ts"
  ],
  "compilerOptions": {
    "noEmit": true,
    "allowJs": true,
    "importsNotUsedAsValues": "remove",
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {  
      "@pega/pcore-pconnect-typedefs/*": ["node_modules/@pega/pcore-pconnect-typedefs/*"]  
    } 
  }
}
